@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.PrekeEditVM
@{
	ViewData["title"] = "Prekės sukūrimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<fieldset class="border rounded shadow p-2">
		<div class="form-group">
			@Html.LabelFor(m => m.Preke.Pavadinimas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Preke.Pavadinimas, new { htmlAttributes = new { @class = "form-control" }	})
			@Html.ValidationMessageFor(m => m.Preke.Pavadinimas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Preke.Kaina, new { @class = "control-label" })
			@Html.EditorFor(m => m.Preke.Kaina, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Preke.Kaina, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Preke.Aprasymas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Preke.Aprasymas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Preke.Aprasymas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Preke.Maistine_informacija, new { @class = "control-label" })
			@Html.EditorFor(m => m.Preke.Maistine_informacija, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Preke.Maistine_informacija, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Preke.Galiojimo_laikas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Preke.Galiojimo_laikas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Preke.Galiojimo_laikas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Preke.Dieta, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Preke.Dieta, Model.Lists.Dietos , "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Preke.Dieta, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Preke.FkKategorija, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Preke.FkKategorija, Model.Lists.Kategorijos , "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Preke.FkKategorija, "", new { @class = "text-danger" })
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>
